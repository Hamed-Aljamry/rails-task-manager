<h1><%= @task.title %></h1>
<h2><%= @task.details %></h2>
 <% if @task.completed === true %>
  <p>Your task is completed</p>
 <% else %>
   <p>Your task is not completed</p>
 <% end %>
<%= link_to 'Back to the list', tasks_path %> <br>
<%= link_to 'Edit a list', edit_path(@task.id) %> <br>
<%= link_to "Delete", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
